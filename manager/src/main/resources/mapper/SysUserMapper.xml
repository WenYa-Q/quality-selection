<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wenya.quality.mapper.SysUserMapper">

    <sql id="sysUserAllFields">
        id, username, password, name, phone, avatar, description, status, create_time, update_time, is_deleted
    </sql>

    <select id="selectSysUserOne" parameterType="SysUser" resultType="SysUser">
        SELECT
        <include refid="sysUserAllFields"/>
        FROM sys_user
        <where>
            <if test="userName != null and userName != '' or password != null and password != ''">
                AND username = #{userName} AND password = #{password}
            </if>
        </where>
    </select>

    <select id="selectSysUser" resultType="com.wenya.quality.doamin.system.SysUser">
        SELECT <include refid="sysUserAllFields"/> FROM sys_user
        <where>
            <if test="userName != null and userName != ''">
                and username = #{userName}
            </if>
            <if test="createTime != null">
                and create_time >= #{createTime}
            </if>
            <if test="createTimeEnd != null and createTimeEnd != ''">
                and create_time &lt;= #{createTimeEnd}
            </if>
            and is_deleted = 0
        </where>
    </select>
</mapper>
